<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
	<CheckBox
			android:id="@+id/checkRepeat"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:paddingBottom="5dp"
			android:text="@string/repeatoff" tools:layout_editor_absoluteY="291dp"
			tools:layout_editor_absoluteX="16dp"/>
	<EditText
			android:id="@+id/editRepeatCount"
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:ems="10"
			android:enabled="false"
			android:hint="@string/zero"
			android:inputType="number"
			android:text="@string/zero" tools:layout_editor_absoluteY="277dp" tools:layout_editor_absoluteX="182dp"/>
	<Spinner
			android:id="@+id/spinnerRepeatType"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:enabled="false"
			android:entries="@array/repeattypes" tools:layout_editor_absoluteY="307dp"
			tools:layout_editor_absoluteX="289dp"/>
	<EditText
			android:id="@+id/editTime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="0.8"
			android:ems="10"
			android:focusable="false"
			android:hint="@string/time"
			android:onClick="onClick" android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>