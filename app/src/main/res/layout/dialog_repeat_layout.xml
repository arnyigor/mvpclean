<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
	<CheckBox
			android:id="@+id/checkRepeat"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:paddingBottom="5dp"
			android:text="@string/repeatoff"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
			app:layout_constraintBaseline_toBaselineOf="@+id/editRepeatCount" app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintEnd_toStartOf="@+id/editRepeatCount" android:enabled="false"/>
	<EditText
			android:id="@+id/editRepeatCount"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:ems="10"
			android:enabled="false"
			android:hint="@string/zero"
			android:inputType="number|numberDecimal"
			android:text="@string/zero"
			app:layout_constraintStart_toEndOf="@+id/checkRepeat" android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
			android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editTime"
			app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/spinnerRepeatType"/>
	<Spinner
			android:id="@+id/spinnerRepeatType"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:entries="@array/repeattypes"
			app:layout_constraintStart_toEndOf="@+id/editRepeatCount" android:layout_marginStart="8dp"
			app:layout_constraintBaseline_toBaselineOf="@+id/editRepeatCount" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.5"/>
	<EditText
			android:id="@+id/editTime"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.8"
			android:hint="@string/time" android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:inputType="time" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" android:textAlignment="center"/>
	<CheckBox
			android:text="@string/week_days"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/checkWeeks" android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/editRepeatCount" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:enabled="false"/>

</android.support.constraint.ConstraintLayout>